login = Window(app, title="Toka Fitness Login",bg="#076ae1", height=400, width=500)
loginImage = Picture(login, image="Logo.png", width=200, height=125)
loginImageDark = Picture(login, image="Logo Dark.png", width=200, height=125)
log_in_box = Box(login, layout="grid")
loginUsernameText = Text(log_in_box, text="Email: ", grid=[0,1])
loginUsernameEntry = TextBox(log_in_box, grid=[2,1], width=30)
loginPasswordText = Text(log_in_box, text="Password: ", grid=[0,3])
loginPasswordEntry = TextBox(log_in_box, hide_text=True, grid=[2,3], width=30)
loginForget = PushButton(login, text="Forget Password?", width=10, height=1, command=Login_Forget)
loginLogin = PushButton(login, text="Login!",  width=10, height=1, command=login_user)
loginback = Box(login, align="bottom", width="fill")
loginbackButton = PushButton(loginback, text="Back", command=login_start)
login.text_color = "white"
loginImageDark.hide()
login.hide()
